<div class="col-md-6 col-md-offset-3">
    <p id="notice"><%= notice %></p>

    <h1 class="text-center"><%= params[:category] %></h1>
    <% if @plays.count == 0 %>
      <h3>There are no plays in this category</h3>
      <% else %>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Director</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @plays.each do |play| %>
              <tr>
                <td><%= play.title %></td>
                <td><%= play.description %></td>
                <td><%= play.director %></td>
                <% if user_signed_in? %>

                  <td><%= link_to 'Show', play , class: "btn btn-primary btn-sm" %></td>

                  <% if play.user_id == current_user.id %>

                    <td><%= link_to 'Edit', edit_play_path(play), class: "btn btn-success btn-sm" %></td>
                    <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>

                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
  <% end %>
</div>
