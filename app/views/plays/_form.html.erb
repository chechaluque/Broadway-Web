<%= simple_form_for(play) do |f| %>
  <% if play.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(play.errors.count, "error") %> prohibited this play from being saved:</h2>

      <ul>
      <% play.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :director %>
    <%= f.text_field :director, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :Image %>
    <%= f.file_field :play_image, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category", class: "form-control") %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
