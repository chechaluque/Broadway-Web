<p id="notice"><%= notice %></p>
<div class="col-md-6 col-md-offset-3">
  <p>
    <h2><strong>Title:</strong>  <%= @play.title %></h2>

  </p>

  <p>
    <h4><strong>Category: </strong> <%= @play.category.name %></h4>

  </p>

  <p>
    <strong>Description:</strong>
    <%= @play.description %>
  </p>

  <p>
    <strong>Director:</strong>
    <%= @play.director %>
  </p>
<% if user_signed_in? %>
  <% if @play.user_id == current_user.id %>
  <%= link_to 'Edit', edit_play_path(@play), class: "btn btn-success btn-block" %>  <br>
  <%= link_to 'Destroy', play_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %> <br>

  <% end %>
    <%= link_to 'Back', plays_path, class: "btn btn-info btn-block" %>
<% end %>

</div>
