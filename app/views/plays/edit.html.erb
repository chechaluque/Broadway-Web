
  <h1 class="text-center">Editing Play</h1>

  <%= simple_form_for @play, html: {multipart: true} do |f| %>


    <div class="form-group">
      <%= f.label :play_image %>
      <%= f.file_field :play_image, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :director %>
      <%= f.text_field :director, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.select :category_id, @categories %>
    </div>


    <div class="form-group">
      <%= f.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= link_to 'Show', @play, class: "btn btn-success btn-block" %> <br>
  <%= link_to 'Back', plays_path, class: "btn btn-info btn-block" %>
